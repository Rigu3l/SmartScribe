# api/.htaccess - Enable PHP processing in API directory
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow direct access to migration script
    RewriteRule ^run_production_migration\.php$ - [L]

    # Allow direct access to other specific PHP files
    RewriteRule ^test_.*\.php$ - [L]

    # Route API requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Enable PHP processing
<Files "*.php">
    SetHandler application/x-httpd-php
</Files>

# Security headers
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-User-ID"
</IfModule>

# Prevent directory listing
Options -Indexes

# Prevent access to sensitive files
<Files "config.php">
    Order deny,allow
    Deny from all
</Files>

<Files ".htaccess">
    Order deny,allow
    Deny from all
</Files>