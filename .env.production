# =========================================
# SmartScribe Production Environment
# Copy this to .env for production deployment
# =========================================

# Database Configuration
DB_HOST=localhost
DB_NAME=smartscribe_prod
DB_USER=smartscribe_prod
DB_PASS=ChangeThisToAStrongPassword123!

# AI Service Configuration
GOOGLE_GEMINI_API_KEY=your_production_google_gemini_api_key_here

# Application Configuration
APP_NAME=SmartScribe
APP_ENV=production
APP_DEBUG=false

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Security Configuration
JWT_SECRET=your_64_character_random_secret_key_here_change_this_in_production
SESSION_LIFETIME=7200

# Google OAuth Configuration (Optional)
GOOGLE_OAUTH_CLIENT_ID=your_production_google_oauth_client_id_here
GOOGLE_CLIENT_ID=your_production_google_client_id_here
GOOGLE_CLIENT_SECRET=your_production_google_client_secret_here

# Frontend Google OAuth (must be prefixed with VUE_APP_)
VUE_APP_GOOGLE_OAUTH_CLIENT_ID=your_production_google_oauth_client_id_here