# =========================================
# SmartScribe Production Environment Template
# DO NOT COMMIT REAL SECRETS TO GITHUB
# Use Railway environment variables instead
# =========================================

# Database Configuration (Railway provides these)
DB_HOST=RAILWAY_MYSQL_HOST
DB_NAME=RAILWAY_MYSQL_DATABASE
DB_USER=RAILWAY_MYSQL_USER
DB_PASS=RAILWAY_MYSQL_PASSWORD

# AI Service Configuration (Set in Railway dashboard)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
APP_NAME=SmartScribe
APP_ENV=production
APP_DEBUG=false

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Security Configuration (Generate new secret for production)
JWT_SECRET=generate_new_secure_secret_for_production
SESSION_LIFETIME=7200

# Google OAuth Configuration (Set real values in Railway dashboard)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend Google OAuth (must be prefixed with VUE_APP_)
VUE_APP_GOOGLE_OAUTH_CLIENT_ID=your_vue_app_google_oauth_client_id

# Frontend Configuration (Railway provides this)
FRONTEND_URL=RAILWAY_FRONTEND_URL